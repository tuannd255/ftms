<% provide :title, t("layouts.all_courses") %>

<div id="user-course-index">

  <div class="row">
    <% if @user_courses.any? %>
      <% @user_courses.each do |user_course| %>
        <div class="col-md-6">
          <div class="card">
            <a href="<%= user_course_path user_course %>" title="<%= user_course.course_name %>">
              <div class="bucket">
                <div class="bucket-media">
                  <div class="badge">
                    <%= image_course_tag user_course.course,
                      user_course.course.language_name %>
                  </div>
                </div>
                <div class="bucket-content">
                  <span class="course-name">
                    <%= truncate user_course.course_name, length: 20 %>
                  </span>
                  <span class="label-status
                    <%= set_background_color_status user_course.status %>">
                    <%= t "courses.statuses.#{user_course.status}" %>
                  </span>
                  <p class="course-description">
                    <%= truncate user_course.course_description, length: 129 %>
                  </p>
                </div>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
