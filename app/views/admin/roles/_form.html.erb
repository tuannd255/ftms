<%= form_for [:admin, @role] do |f| %>
  <div class="row">
    <%= render "shared/error_messages", object: @role %>
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :role_type %>
        <%= f.select :role_type, Role.role_types.keys, {}, class: "form-control" %>
      </div>
      <br>
      <%= render "allocate_function_form", f: f %>
      <div class="form-group pull-right">
        <%= f.submit (f.object.new_record? ? t("buttons.create")
          : t("buttons.update")), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
