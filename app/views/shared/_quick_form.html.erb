<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [@namespace, object], remote: true do |f| %>
      <div class="modal-body">
        <div class="errors"></div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: true,
            placeholder: t("quick_form.#{object.class.name.downcase}") %>
        </div>
        <div class="form-group">
          <% if object.class == Location %>
            <%= f.label :manager %>
            <%= f.select :user_id, managers.collect{|u| [u.name, u.id]}, {},
              {selected: f.object.user_id, class: "form-control"} %>
          <% elsif object.class == University %>
            <%= f.label :abbreviation %>
            <%= f.text_field :abbreviation, class: "form-control" %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t("buttons.create"), class: "btn btn-primary" %>
        <%= link_to t("buttons.cancel"), "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
