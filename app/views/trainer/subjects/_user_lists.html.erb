<table class="user-lists table">
  <thead>
    <tr>
      <th class="col-sm-2"><%= t "subjects.fields.name" %></th>
      <th class="col-sm-2"><%= t "subjects.fields.start_date" %></th>
      <th class="col-sm-2"><%= t "subjects.fields.end_date" %></th>
      <th class="col-sm-2"><%= t "subjects.fields.user_end_date" %></th>
      <th class="col-sm-2"><%= t "subjects.fields.status" %></th>
      <th class="col-sm-2"><%= t "subjects.fields.progress" %></th>
      <th class="action"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @supports.user_subjects.each.with_index do |user_subject, index| %>
      <%= render "trainer/user_subjects/user_subject",
        user_subject: user_subject,
        user_index: index %>
    <% end %>
  </tbody>
  <%= hidden_field_tag "subject_size", @supports.user_subjects.size %>
  <%= hidden_field_tag "course_size", 1 %>
</table>
