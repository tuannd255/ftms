<div class="box box-primary">
  <div class="box-body box-profile">

    <%= avatar_user_tag @user,
      "img-circle profile-user-img img-responsive img-circle",
      Settings.image_profile %>

    <h3 class="profile-username text-center">
      <%= @user.name %>
    </h3>

    <p class="text-muted text-center">
      <b><%= t "user.profile.email" %></b><%= @user.email %> &nbsp;
      <% if current_user == @user %>
        <%= link_to edit_user_path(@user) do %>
          <i class="fa fa-pencil" aria-hidden="true"></i>
        <% end %>
      <% else %>
        <% if policy edit_trainer_user_path(@user) %>
          <%= link_to edit_trainer_user_path(@user) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
        <% end %>
      <% end %>

      <p><%= link_to t("user.profile.download_pdf"),
        export_file_user_pdfs_path(@user, format: "pdf") %>
      </p>
    </p>
  </div>
</div>
